<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="4dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edit_txt_noti_title"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="start"
                    android:background="@drawable/edit_text_bg"
                    android:focusable="true"
                    android:gravity="start"
                    android:singleLine="true"
                    android:hint="Notification Title"
                    android:inputType="textMultiLine"
                    android:maxLength="150"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edit_txt_noti_content"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="start"
                    android:background="@drawable/edit_text_bg"
                    android:focusable="true"
                    android:gravity="start"
                    android:hint="Notification Content"
                    android:inputType="textMultiLine"
                    android:maxLength="255"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/text_view_date"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:drawableTint="@color/theme_blue"
                    android:gravity="center_vertical"
                    android:hint="Date"
                    android:paddingLeft="5dp"
                    android:paddingRight="6dp"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="6dp"
                    android:layout_height="34dp"></View>

                <TextView
                    android:id="@+id/text_view_time"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:drawableEnd="@drawable/ic_clock"
                    android:gravity="center_vertical"
                    android:hint="Time"
                    android:paddingLeft="5dp"
                    android:paddingRight="6dp"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/checkbox_repeat"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.6"
                    android:buttonTint="@color/theme_blue"
                    android:text="Repeat"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_pattern_and_range"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@color/theme_gray"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_recurrence_pattern"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Recurrence Pattern"
                        android:textColor="@color/theme_blue"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/gray_border"></View>

                    <RadioGroup
                        android:id="@+id/radio_group_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_btn_daily"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="Daily"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <RadioButton
                            android:id="@+id/radio_btn_weekly"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Weekly"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <RadioButton
                            android:id="@+id/radio_btn_monthly"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Monthly"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <RadioButton
                            android:id="@+id/radio_btn_yealy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yearly"
                            android:textColor="@color/black"
                            android:textSize="12dp" />
                    </RadioGroup>

                    <!--**************Monthly View *********************-->
                    <LinearLayout
                        android:id="@+id/layout_monthly_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:checked="true"
                                android:id="@+id/radio_btn_day"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:text="Day"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <EditText
                                android:id="@+id/edit_txt_day"
                                android:layout_width="0dp"
                                android:layout_height="34dp"
                                android:layout_weight="0.1"
                                android:text="1"
                                android:maxLength="2"
                                android:inputType="number"
                                android:background="@drawable/edit_text_bg_white"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/txt_every"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:text="of every"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <EditText
                                android:text="1"
                                android:id="@+id/edit_txt_month"
                                android:layout_width="0dp"
                                android:layout_height="34dp"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:maxLength="2"
                                android:inputType="number"
                                android:background="@drawable/edit_text_bg_white"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/txt_months"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="0.5"
                                android:text="month(s)"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_btn_the"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.15"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <Spinner
                                android:id="@+id/spinner_week_name"
                                android:layout_width="0dp"
                                android:layout_height="34dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="0.3"
                                android:background="@drawable/edit_text_bg_white"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:textColorHint="@color/White"
                                android:textSize="12dp" />

                            <Spinner
                                android:id="@+id/spinner_day_name"
                                android:layout_width="0dp"
                                android:layout_height="34dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="0.4"
                                android:background="@drawable/edit_text_bg_white"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:textColorHint="@color/White"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/txt_every2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:text="of every"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <EditText
                                android:text="1"
                                android:id="@+id/edit_txt_month2"
                                android:layout_width="0dp"
                                android:layout_height="34dp"
                                android:maxLength="2"
                                android:inputType="number"
                                android:layout_gravity="center"
                                android:layout_weight="0.15"
                                android:background="@drawable/edit_text_bg_white"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/txt_months2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="0.3"
                                android:text="month(s)"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <!--**************Weekly View *********************-->
                    <LinearLayout
                        android:id="@+id/layout_weekly_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_recur"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Recur every"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <EditText
                                android:id="@+id/edit_txt_recur_week"
                                android:layout_width="34dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="1"
                                android:maxLength="2"
                                android:inputType="number"
                                android:background="@drawable/edit_text_bg_white"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/txt_weeks_on"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:text="week(s) on:"
                                android:textColor="@color/black"
                                android:textSize="12dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:checked="true"
                                android:id="@+id/checkbox_sun"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sunday"
                                android:textColor="@color/black"
                                android:textSize="10dp" />

                            <CheckBox
                                android:checked="true"
                                android:id="@+id/checkbox_mon"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Monday"
                                android:textColor="@color/black"
                                android:textSize="10dp" />

                            <CheckBox
                                android:checked="true"
                                android:id="@+id/checkbox_tue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Tuesday"
                                android:textColor="@color/black"
                                android:textSize="10dp" />

                            <CheckBox
                                android:checked="true"
                                android:id="@+id/checkbox_wed"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Wednesday"
                                android:textColor="@color/black"
                                android:textSize="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:checked="true"
                                android:id="@+id/checkbox_thurs"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Thursday"
                                android:textColor="@color/black"
                                android:textSize="10dp" />

                            <CheckBox
                                android:checked="true"
                                android:id="@+id/checkbox_fri"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Friday"
                                android:textColor="@color/black"
                                android:textSize="10dp" />

                            <CheckBox
                                android:checked="true"
                                android:id="@+id/checkbox_sat"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Saturday"
                                android:textColor="@color/black"
                                android:textSize="10dp" />

                            <CheckBox
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Wednesday"
                                android:textColor="@color/black"
                                android:textSize="10dp"
                                android:visibility="invisible" />
                        </LinearLayout>
                    </LinearLayout>

                    <!--**************Yearly View *********************-->
                    <LinearLayout
                        android:id="@+id/layout_yearly_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_recur_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Recur every"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <EditText
                                android:text="1"
                                android:id="@+id/edit_txt_recur_year"
                                android:layout_width="34dp"
                                android:layout_height="30dp"
                                android:maxLength="2"
                                android:inputType="number"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/edit_text_bg_white"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/txt_years_on"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:text="year(s) on:"
                                android:textColor="@color/black"
                                android:textSize="12dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:checked="true"
                                android:id="@+id/radio_btn_on"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <Spinner
                                android:id="@+id/spinner_month"
                                android:layout_width="100dp"
                                android:layout_height="34dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/edit_text_bg_white"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:textColorHint="@color/White"
                                android:textSize="12dp" />

                            <EditText
                                android:text="1"
                                android:maxLength="2"
                                android:inputType="number"
                                android:id="@+id/edit_txt_year_day"
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/edit_text_bg_white"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_btn_year_the"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <Spinner
                                android:id="@+id/spinner_year_week"
                                android:layout_width="0dp"
                                android:layout_height="34dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/edit_text_bg_white"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:textColorHint="@color/White"
                                android:textSize="12dp" />

                            <Spinner
                                android:id="@+id/spinner_year_day"
                                android:layout_width="0dp"
                                android:layout_height="34dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="0.6"
                                android:background="@drawable/edit_text_bg_white"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:textColorHint="@color/White"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/txt_of"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0.1"
                                android:gravity="center"
                                android:text="of"
                                android:textColor="@color/black"
                                android:textSize="10dp" />

                            <Spinner
                                android:id="@+id/spinner_month2"
                                android:layout_width="0dp"
                                android:layout_height="34dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/edit_text_bg_white"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:textColorHint="@color/White"
                                android:textSize="12dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <!--**************Daily View *********************-->
                    <LinearLayout
                        android:id="@+id/layout_daily_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_btn_every_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Every"
                                android:checked="true"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <EditText
                                android:id="@+id/edit_txt_recur_daily"
                                android:layout_width="34dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:maxLength="2"
                                android:inputType="number"
                                android:text="1"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/edit_text_bg_white"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/txt_day"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:text="day(s)"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_btn_every_weekday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Monday to Friday"
                                android:textColor="@color/black"
                                android:textSize="12dp" />


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/theme_gray"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_recurrence_range"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Recurrence Range"
                        android:textColor="@color/theme_blue"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/gray_border"></View>


                    <RadioButton
                        android:id="@+id/radio_btn_no_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="No end date"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_btn_end_after"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="End after"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <EditText
                            android:id="@+id/edit_txt_occurrences"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_gravity="center"
                            android:maxLength="2"
                            android:text="2"
                            android:inputType="number"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/edit_text_bg_white"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/txt_occurrences"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:text="occurrences"
                            android:textColor="@color/black"
                            android:textSize="12dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_btn_end_by"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="End by"
                            android:textColor="@color/black"
                            android:textSize="12dp" />


                        <TextView
                            android:paddingLeft="5dp"
                            android:gravity="center_vertical"
                            android:id="@+id/txt_date"
                            android:layout_width="130dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/edit_text_bg_white"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:gravity="bottom">

                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:background="@color/theme_blue"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@color/White"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>